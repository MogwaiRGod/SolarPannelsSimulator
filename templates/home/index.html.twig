{% extends 'base.html.twig' %}

{% block stylesheets %}
        <link rel="stylesheet" href="">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block header %}
    {# titre de la page #}
    <h1 class="solar-h1">{{ header.h1 }}</h1>
{% endblock %}

{% block body %}
    {# image illustrative #}
    <div>
        <img src="{{ asset('images/man_pannel.jpg') }}" href="Homme posant un panneau photovoltaïque" />
    </div>

    {# le formulaire #}
    {{ form_start(form) }}
            <div class="d-flex">
            <div class="">
                {{ form_row(form.firstName) }}
            </div>
            <div class="" id="some-custom-id">
                {{ form_row(form.lastName) }}
            </div>
        </div>
        <div class="d-flex">
            <div class="">
                {{ form_row(form.length) }}
            </div>
            <div class="" id="some-custom-id">
                {{ form_row(form.width) }}
            </div>
        </div>
        <div class="">
            {{ form_row(form.bill) }}
        </div>

        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
    {{ form_end(form) }}

    {# si le formulaire a été envoyé #}
    {% if submittedData %}
        {# section avec les estimations utilisateur #}
        <section>
            <h2>{{ section.h2 }}</h2>
            {{ dump(data) }}
        </section>
    {% endif %}
{% endblock %}